<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="body-container">

    @{
        int tipoRol = Convert.ToInt32(Session["Rol"]);
    }

    <header class="header">
         <a href="@Url.Action("Index", "Home")" class="header__company-name header__company-name--link link">Abanck</a>

         <button class="header__button">
            <i class="fas fa-bars nav__icon"></i>
         </button>

        <nav class="nav">

            <ul class="nav__list">
                <li class="nav__item"><a href="@Url.Action("Index", "Home")" class="link">Inicio</a></li>
                <li class="nav__item"><a href="#" class="link">Datos Personales</a></li>
                <li class="nav__item"><a href="@Url.Action("About", "Home")" class="link">Transacciones</a></li>
                <li class="nav__item"><a href="@Url.Action("About", "Home")" class="link">Saldo</a></li>
                <li class="nav__item nav__item--logout"><a href="#" class="link">@Session["nombre_usuario"]</a>
                    <ul class="nav__list nav__list--logout">
                        <li class="nav__item"> <a href="@Url.Action("Logout", "Account")" class="link">Cerrar sesión </a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>

    <div class="body-container__content">
        @RenderBody()
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    <script src="https://kit.fontawesome.com/ca6b9ed282.js"></script>
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>